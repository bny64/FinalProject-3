<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>
	<typeAliases>
		<typeAlias type="dto.User" alias="user" />
		<typeAlias type="dto.Board" alias="board" />
		<typeAlias type="dto.BoardLocation" alias="boardLocation" />
		<typeAlias type="dto.Category" alias="category" />
		<typeAlias type="dto.UserLocation" alias="userLocation" />
		<typeAlias type="dto.UserCategory" alias="usercategory" />
		<typeAlias type="dto.UserFriend" alias="userfriend" />
		<typeAlias type="dto.Promise" alias="promise" />
		<typeAlias type="dto.Reply" alias="reply" />
		<typeAlias type="dto.HotBoard" alias="hotBoard" />
	</typeAliases>

	<mappers>
		<mapper resource="mybatis/mapper/UserMapper.xml"/>
		<mapper resource="mybatis/mapper/BoardMapper.xml"/>
		<mapper resource="mybatis/mapper/BoardLocationMapper.xml"/>
		<mapper resource="mybatis/mapper/CategoryMapper.xml"/>
		<mapper resource="mybatis/mapper/UserLocationMapper.xml"/>
		<mapper resource="mybatis/mapper/UserCategoryMapper.xml"/>
		<mapper resource="mybatis/mapper/UserFriendMapper.xml"/>
		<mapper resource="mybatis/mapper/PromiseMapper.xml"/>
		<mapper resource="mybatis/mapper/ReplyMapper.xml"/>
		<mapper resource="mybatis/mapper/HotBoardMapper.xml"/>
	</mappers>





</configuration>